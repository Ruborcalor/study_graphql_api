{
  "compilerOptions": {
    "baseUrl": "./src",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "target": "es6",
    "module": "commonjs",

    "moduleResolution": "node",
    "lib": ["esnext"],
    "paths": {
      "src/*": ["src/*"],
      "types/*": ["src/types/*"]
    },
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/types/*.ts"],
  "exclude": ["src/tests/**/*.ts"]
}
